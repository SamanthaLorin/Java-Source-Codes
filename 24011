

import java.util.Scanner;

class Vehicle {
    private String brand, model;
    private double fuel, distance;

    public Vehicle(String brand, String model, double distance, double fuel) {
        this.brand = brand;
        this.model = model;
        this.distance = distance;
        this.fuel = fuel;
    }

    public String getBrand() { return brand; }
    public String getModel() { return model; }
    public double getDistance() { return distance; }
    public double getFuel() { return fuel; }

    public double calculateFuelEfficiency() {
        return fuel == 0 ? 0 : distance / fuel;
    }

    public void printSummary() {
        System.out.println("Vehicle: " + brand + " " + model);
        System.out.println("Distance Traveled: " + distance + " km");
        System.out.printf("Fuel Efficiency: %.2f km/l\n\n", calculateFuelEfficiency());
    }
}

// Subclasses for future extension (polymorphism example)
class Car extends Vehicle {
    public Car(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

class Bike extends Vehicle {
    public Bike(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

class Truck extends Vehicle {
    public Truck(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        Vehicle car = createVehicle(in, "Car");
        Vehicle bike = createVehicle(in, "Bike");
        Vehicle truck = createVehicle(in, "Truck");

        System.out.println("\n--- Vehicle Summary ---");
        car.printSummary();
        bike.printSummary();
        truck.printSummary();
    }

    static Vehicle createVehicle(Scanner in, String type) {
        System.out.println("\nEnter details for " + type + ":");
        System.out.print("Brand: ");
        String brand = in.next();
        System.out.print("Model: ");
        String model = in.next();
        System.out.print("Distance Traveled (km): ");
        double distance = in.nextDouble();
        System.out.print("Fuel Used (liters): ");
        double fuel = in.nextDouble();

        switch (type.toLowerCase()) {
            case "car": return new Car(brand, model, distance, fuel);
            case "bike": return new Bike(brand, model, distance, fuel);
            case "truck": return new Truck(brand, model, distance, fuel);
            default: return new Vehicle(brand, model, distance, fuel);
        }
    }
}


Â±++++++++++

import java.util.Scanner;

class Vehicle {
    private String brand, model;
    private double distance, fuel;

    public Vehicle(String brand, String model, double distance, double fuel) {
        this.brand = brand;
        this.model = model;
        this.distance = distance;
        this.fuel = fuel;
    }

    public String getBrand() { return brand; }
    public String getModel() { return model; }
    public double getDistance() { return distance; }
    public double getFuel() { return fuel; }

    public double calculateFuelEfficiency() {
        return fuel == 0 ? 0 : distance / fuel;
    }

    public void printSummary() {
        System.out.println("Vehicle: " + brand + " " + model);
        System.out.println("Distance Traveled: " + distance + " km");
        System.out.printf("Fuel Efficiency: %.2f km/l\n\n", calculateFuelEfficiency());
    }
}

class Car extends Vehicle {
    public Car(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

class Bike extends Vehicle {
    public Bike(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

class Truck extends Vehicle {
    public Truck(String brand, String model, double distance, double fuel) {
        super(brand, model, distance, fuel);
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        Vehicle car = inputVehicle(in, "Car", Car.class);
        Vehicle bike = inputVehicle(in, "Bike", Bike.class);
        Vehicle truck = inputVehicle(in, "Truck", Truck.class);

        System.out.println("\n--- Vehicle Summary ---");
        car.printSummary();
        bike.printSummary();
        truck.printSummary();
    }

    static Vehicle inputVehicle(Scanner in, String type, Class<? extends Vehicle> vehicleClass) {
        System.out.println("\nEnter details for " + type + ":");
        System.out.print("Brand: ");
        String brand = in.next();
        System.out.print("Model: ");
        String model = in.next();
        System.out.print("Distance Traveled (km): ");
        double distance = in.nextDouble();
        System.out.print("Fuel Used (liters): ");
        double fuel = in.nextDouble();

        try {
            return vehicleClass.getConstructor(String.class, String.class, double.class, double.class)
                               .newInstance(brand, model, distance, fuel);
        } catch (Exception e) {
            System.out.println("Something went wrong with " + type);
            return null;
        }
    }
}

