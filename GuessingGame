    private void btnGuessActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            int start = Integer.parseInt(startTxtField.getText());
            int end = Integer.parseInt(endTxtField.getText());

            // Ensure start is less than end
            if (start >= end) {
                DisplayText.setText("Start must be less than End.");
                return;
            }

            // Generate the random number only once
            if (num == 0) { // Assuming 0 means the game hasn't started yet
                int dif = end - start;
                num = (int) (Math.random() * dif) + start;
                tries = 0; // Reset tries
                numOfTries.setText("Tries: " + tries);
            }

            int guess = Integer.parseInt(inputNum.getText());
            tries++; // Increment the number of tries
            numOfTries.setText("Tries: " + tries);

            if (guess < num) {
                DisplayText.setText("Higher!");
            } else if (guess > num) {
                DisplayText.setText("Lower!");
            } else {
                DisplayText.setText("Correct! The number was " + num);
                // Reset the game
                num = 0; // Reset the number
            }
        } catch (NumberFormatException e) {
            DisplayText.setText("Please enter valid numbers.");
        } catch (Exception e) {
            DisplayText.setText("An error occurred: " + e.getMessage());

        }
        
    }                                        

    private void numOfTriesActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
    }                                          

