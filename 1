package com.mycompany.main00;
import java.util.Scanner;

class PersonalInfo{
	protected String name, address;

	// Constructor 
	public PersonalInfo(String name, String address){
	this.name = name;
	this.address = address; 
}

	// Getter
	public String getName(String name){
	return name;
}
	// Getter
	public String getAddress(String address){
	return address; 
}      
        public void continuePrompt(){
        Scanner input = new Scanner(System.in);
        System.out.println("Would you like to add more?");
	String choose = input.nextLine();

	if(choose.equals('y') || choose.equals("Yes")){
	} 
        else{
            System.exit(0);
        }
}
        public void DisplayInfo(){
	System.out.println("Personal Information");
	System.out.println("Name: " + name);
	System.out.println("Address: " + address);
	continuePrompt();
}

       
        
class Name extends PersonalInfo{
      public Name(String Name) {
    }
      
class Address extends PersonalInfo{
      public Address(String address) {
    }

}


public class Main00 {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
	DisplayFirst();

	}

	static void DisplayFirst(){
        Scanner input = new Scanner(System.in);
	System.out.print("Enter your name: ");
