package com.mycompany.javapracticalexam01;
import java.util.Random;
import java.util.Scanner;

public class JAVAPRACTICALEXAM01 {

    public static void main(String[] args) {
       String playAgain;

    do {
        System.out.println("Let's Play A Game! \n Guess the Number! \n \n");
        Random random = new Random();
        int numGuess = random.nextInt(100) + 1;
        Scanner input = new Scanner(System.in);
        int numberOfTries = 0;
        int guess;
        boolean hasGuessedCorrectly = false;

        
        while(!hasGuessedCorrectly){
            System.out.print("Guess a number between 1 and 100 = ");
            guess = input.nextInt();
            numberOfTries++;
            
             if (guess == 0) {
                    System.out.println("You chose to quit the game. Bye-bye!");
                    break;  
                }
            
            if (guess < 1 || guess > 100){
                System.out.println("Invalid Number. Please choose a number between 1 and 100");
            }else if (guess < numGuess){
                System.out.println("Too low. Try Again!");
            }
            else if(guess > numGuess){
                System.out.println("Too high. Try Again!");
            }else {
                hasGuessedCorrectly = true;  
                System.out.println("YAY! You guessed correctly! You guessed the number in " + numberOfTries + " tries.");
            }
        }
     
            System.out.print("\nDo you want to play again? (y/n): ");
            playAgain = input.next().toLowerCase();

        } while (playAgain.equals("y"));

        System.out.println("Thanks for playing! Goodbye!");
    }
}
       
  

