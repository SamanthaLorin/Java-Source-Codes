# number 1
num = int(input("Enter a number: "))
total = 0

for i in range(1, num + 1):
    total += i

print("Summation:", total)

# number 2
num1 = int(input("\nEnter a number: "))
total1 = 1

for j in range(1, num1 + 1):
    total1 *= j

print('Factorial: ', total1)

# number 3
start = int(input('\nEnter Start: '))
stop = int(input('Enter Stop: '))
print('\nEven numbers')
for num in range(start, stop):
    if num % 2 == 0:
        
        print(num)

    
