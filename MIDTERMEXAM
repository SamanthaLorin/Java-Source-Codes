package com.mycompany.midtermexam01;
import java.util.Scanner;
/**
 *
 * @author user
 */
public class MidtermExam01 {
    static String snum = "";
    static String lastname = "";
    static String firstname = "";
    static String gender = "";
    static String program = "";
    static String sec = "";
    public static void main(String[] args) {
        /*
        String lastname = "";
        String firstname = "";
        String gender = "";
        String program = "";
        String sec = "";
        */
                displayMenu();
    }
      public static void displayMenu() {
        Scanner input = new Scanner(System.in);
        System.out.println("\n[1] Store CCPRGG1L student record");
        System.out.println("[2] Edit the student record");
        System.out.println("[3] Display the recorded entry");
        System.out.println("[4] Exit");
        System.out.print("Choose: ");
        int choose = input.nextInt();

        switch (choose) {
            case 1:
                storeRecord();
                break;
                
            case 2:
               editRecordMenu();
                break;
                
            case 3:
                printEntry();
                break;
                
            case 4:
                System.out.println("Exiting program...");
                System.exit(0);
                break;
                
            default:
                System.out.println("Invalid choice! Please choose a valid option.");
                displayMenu();
    }
      }
         public static void storeRecord() {
            Scanner input = new Scanner(System.in);
            System.out.print("\nEnter Student Number: ");
           snum = input.nextLine();

            System.out.print("Enter Surname: ");
            lastname = input.nextLine();

            System.out.print("Enter First Name: ");
            firstname = input.nextLine();

            System.out.print("Enter gender: ");
            gender = input.nextLine();

            System.out.print("Enter Program: ");
            program = input.nextLine();

            System.out.print("Enter Section: ");
            sec = input.nextLine();
            
             if (!allowedSection(sec)) {
            System.out.println("That section is not included in CCPRGG1L.");
            System.exit(0);
             }
            
            
            displayMenu();
        }
              public static void editRecordMenu() {
            Scanner input = new Scanner(System.in);      
            System.out.println("\n[1] Student Number");
            System.out.println("[2] Surname");
            System.out.println("[3] First Name");
            System.out.println("[4] Gender (M for male, F for female)");
            System.out.println("[5] Program");
            System.out.println("[6] Section");
            System.out.print("\nWhich entry do you want to edit? : ");
            int choose1 = input.nextInt();
            input.nextLine(); 

            editRecord(choose1);
            displayMenu();
    }
           public static void editRecord(int choose1){
            Scanner input = new Scanner(System.in);
            if(choose1==1){
                System.out.print("\nEdit Student Number: ");
                snum = input.nextLine();   
                
            }else if(choose1 == 2){
                System.out.print("\nEdit Surname: ");
                lastname = input.nextLine();
                
            }else if(choose1 == 3){
                System.out.print("\nEnter First Name: ");
                firstname = input.nextLine();
                
            }else if(choose1 == 4){
                System.out.print("\nEnter gender: ");
               gender = input.nextLine();
               
            }else if(choose1 == 5){
                System.out.print("\nEnter Program: ");
               program = input.nextLine();
            }else if(choose1 == 6){
                System.out.print("\nEnter Section: ");
                sec = input.nextLine();
            }
           }
          public static void printEntry() {
            System.out.println("\n \nHere's the information of the student record:");
            System.out.println("The student number " +  snum + " belongs to " + firstname +" "+ lastname + ".He/She is from " + program + " under the section " + sec + ".\n ");
            displayMenu();
        }
           public static boolean allowedSection(String section) {
            return section.equals("COM241") || section.equals("INF247") || section.equals("INF246");
    }
           
}

